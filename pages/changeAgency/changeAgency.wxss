/* pages/changeAgency/changeAgency.wxss */

page {
  background: #f4f4f4;
}

.item {
  box-shadow: 0px 4px 6px 0px rgba(190, 190, 190, 0.4);
  border-radius: 12rpx;
  padding: 32rpx;
  overflow: hidden;
  position: relative;
  background: #fff;
  margin-bottom: 16rpx;
}

.agency_logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  float: left;
  vertical-align: bottom;
}

.itemInfo {
  float: left;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.itemInfo view:nth-of-type(1) {
  font-size: 28rpx;
  color: #333;
}

.itemInfo view:nth-of-type(2) {
  font-size: 20rpx;
  color: #fff;
  width: 86rpx;
  text-align: center;
  height: 28rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  /* border:1px solid rgba(247,102,5,1); */
  background:#f76605;
  box-sizing: border-box;
  border-radius: 4rpx;
}

.check_icon {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-top: 40rpx;
}
