/* pages/coueseForm/coueseForm.wxss */
.kexiaoCard{
padding: 32rpx;
background: #fff;
overflow: hidden;
margin-bottom: 24rpx;
box-shadow:0px 4px 6px 0px rgba(190,190,190,0.4);
border-radius:12rpx;
}

.kexiaoItem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  float: left;
  width: 50%;
  position: relative;
}

.kexiaoItem:nth-of-type(1)::before{
content: '';
position: absolute;
height: 40rpx;
background: #ebebeb;
width: 2rpx;
top: 30rpx;
right: 0
}

.kexiaoItem view{
  font-size: 24rpx;
  color: #999999
}

.remain view:nth-of-type(1){
  color: #FC9E03;
  font-size:48rpx;
  font-weight:500;
}

.hasKexiao view:nth-of-type(1){
  color: #F76605;
  font-size:48rpx;
  font-weight:500;
}

.coursetime view:nth-of-type(2){
  font-size: 28rpx;
  color: #f76605;
  display: flex;
  align-items: center;
  height: 28rpx;

}
.coursetime text:nth-of-type(2) {
font-size:28rpx;
color:#f76605;

}
.coursetime text:nth-of-type(1){
  color: #999999
}


.coursetime view:nth-of-type(1){
 font-size: 28rpx;
 color: #999999
}

.deduct{
  display: inline-block;
  width:28rpx;
height:28rpx;
background:rgba(247,102,5,1)!important;
border-radius:4rpx;
font-size: 24rpx!important;
text-align: center;
line-height: 28rpx;
color: #fff!important;
margin-right: 20rpx;
}

.mycouse{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 28rpx;
  float: right;
}

.mycouse image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
}

.NoDatas{
  height: calc(100vh);
  width:100%;
background:#f4f4f4;
display:flex;
flex-direction:column;
/* justify-content:center; */
align-items:center;
}
.NoDatas image{
  width: 360rpx;
  height: 328rpx;
  margin-top:160rpx;
}