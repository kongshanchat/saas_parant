.teacher-rights{
  background: #fff;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between;
  align-items: flex-start; */
  flex-wrap: wrap;
  padding:0 32rpx;
  padding-bottom: 0;
}
.rights-item{
  padding: 6rpx 18rpx;
  /* background: #d8d8d8; */
  color: #bebebe;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  margin-right:20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #bebebe;
}

.setting{
  background: #fff;
  padding:32rpx;
  /* padding-top: 20rpx; */
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  text-indent: 32rpx;
  border-radius: 10rpx;
}
.setting::after{
  position: absolute;
  content: '';
  height: 40rpx;
  width: 8rpx;
  top: 32rpx;
  left:32rpx;
  background: #ff7f6c
}

.selected{
  background: #ff7f6c;
  color: #fff;
}

.phone{
