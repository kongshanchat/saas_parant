.delated{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50px;
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  background: #ff7f6c;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 100rpx
}
.teacherInfo{
  background: #fff;
}

.teacherInfo input{
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #bebebe;
  border-bottom: 1rpx solid #ebebeb;
}
/* .teacherInfo input:nth-of-type(1){
