/* pages/homeworkDetail/homeworkDetail.wxss */
.current{
  padding-top:20rpx;
  text-align: right;
  color:#F76605;
  font-size: 28rpx;
}

.swiperBox{
  border: 1rpx solid #ebebeb;
  border-radius: 4rpx;
  padding: 24rpx;
}
.end_act{
    position: absolute;right: 0;
}
.time_view {
  /* width: 600rpx; */
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #999;
}

.slider_bg {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  top: 4rpx;
  left: 2rpx;
  position: absolute;
}

.line{
  width: 394rpx!important
}
page{
  background: #fff;
}
.mainTeacher{
    padding: 24rpx;
    overflow: hidden;
    box-sizing: border-box;
    width: 750rpx;
}

.header{
    display: flex;
    flex-direction: row;
    height: 80rpx;
    align-items: center;
    justify-content: space-between
}

.h_l{
    display: flex;
    flex-direction: row;
    align-items: center
}
.h_l image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin-right: 32rpx;
}
.h_l text{
    color: #333;
    font-size:32rpx;
}
.editIcon{
    height: 40rpx;
    width: 40rpx;
}

.workdetail{
    position: relative;
    margin-top: 40rpx;
    padding: 0 32rpx;
    background:#F76605;
    border-radius: 20rpx;
    line-height: 140rpx;
}

.workdetail::after{
  content: '';
  position: absolute;
  left: 20rpx;
  top:-18rpx;
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #F76605;
}

.end_act::before{
  content: '';
  right: -1000rpx;
}

.className{
    height: 140rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 32rpx;
    color: #fff;
    position: relative;
    border-bottom: 1rpx solid #e05a00;
}

.workCont{
    padding: 40rpx 0;
    line-height: 40rpx;
    font-size: 28rpx;
    color:#fff;
    word-wrap:break-word;
}

.audioBox{
    height:256rpx;
border-radius:12rpx;
background:#fff;
margin-bottom:40rpx;
border-bottom:1rpx solid #ebebeb;
position:relative;
padding:40rpx;
box-sizing:border-box;
}

.workInfo{
    display:flex;
flex-direction:row;
height:34rpx;
line-height:34rpx;
font-size:32rpx;
padding:10rpx 0;
padding-top:30rpx;
padding-bottom:32rpx;
border-top: 1rpx solid rgba(224,90,0,1);
}

.info_item{
    padding: 0 16rpx;
    color: #fff;
    /* border-right: 1rpx solid #fff; */
}

.info_item:nth-of-type(1){
    padding-left: 0;
}
.info_item:nth-last-of-type(1){
    border-right:0rpx solid #fff;
}

.exercise{
    /* margin: 40rpx 0; */
}

.ex_tle{
    font-size: 32rpx;
    color: #333;
    text-indent: 20rpx;
    position: relative;
    height: 44rpx;
    line-height: 44rpx;
    margin: 32rpx 0;
}

.ex_tle::before{
    content: '';
    position: absolute;
    height: 32rpx;
    width: 8rpx;
    border-radius: 4rpx;
    background: #F76605;
    top:6rpx;
    left: 0rpx;
    z-index: 9999;
}

.exercise image{
    width: 100%;
    height: 460px;
}

swiper{
  min-height: 460px
}

.comment_tle{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 96rpx;
  color: #fff;
  line-height: 96rpx;
  width: 100%;
  font-size: 32rpx;
  text-indent: 68rpx;
  background:linear-gradient(90deg,rgba(247,102,5,1) 0%,rgba(247,102,5,0.6) 100%);
}

.comment_tle::before{
  content: '';
  width:8rpx;
height:32rpx;
background:rgba(255,255,255,1);
border-radius:4rpx;
position: absolute;
left: 40rpx;


}

.comment_tle image{
  margin-left: 32rpx;
  width: 24rpx;
  height: 24rpx;
}

.commBox{
  padding:16rpx 24rpx;
  background: #f7f7f7;

}

.c_left text{
  font-size:28rpx;
  color: #333;
  margin-right: 20rpx;
}

.c_right{
  width: 28rpx;
  height: 28rpx;
}

.comList{
  border-radius:6px;
  height: 96rpx;
  padding: 16rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 16rpx;
}
.comList:nth-last-of-type(1){
  margin-bottom: 0;
}